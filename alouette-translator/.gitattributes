# Generated files
*.g.dart linguist-generated=true
*.freezed.dart linguist-generated=true
*.config.dart linguist-generated=true

# Exclude generated files from language statistics
android/app/src/main/java/io/flutter/plugins/GeneratedPluginRegistrant.java linguist-generated=true
ios/Runner/GeneratedPluginRegistrant.* linguist-generated=true
linux/flutter/generated_plugin_registrant.* linguist-generated=true
macos/Flutter/GeneratedPluginRegistrant.swift linguist-generated=true
windows/flutter/generated_plugin_registrant.* linguist-generated=true

# Lock files should not be merged
pubspec.lock merge=binary
package-lock.json merge=binary
yarn.lock merge=binary

# Dart specific
*.dart diff=dart

# YAML specific  
*.yaml diff=yaml
*.yml diff=yaml
